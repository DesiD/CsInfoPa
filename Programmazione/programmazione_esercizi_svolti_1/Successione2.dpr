program Successione2;

{$APPTYPE CONSOLE}

uses
  SysUtils;

var
i:integer;
succ,n:real;
begin
succ:=0;
i:=1;
writeln('Inserisci il valore da superare n');
readln(n);
while succ<=n do
begin
succ:=succ+1/i;
i:=i+1;
end;
writeln('Il valore ',n,' viene superato al termine ',i-1,' della serie armonica');
readln;
end.
